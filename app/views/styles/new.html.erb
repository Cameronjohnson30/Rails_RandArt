<h1>New style</h1>

<%= form_for @style do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>

<% if @style.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @style.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>