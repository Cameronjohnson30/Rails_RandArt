<div class="feed">
<% @post.each do |post| %>
  <%= link_to (image_tag post.image, style:'width:300px'), post_path(post) %>
  <br>
  <%= link_to post.user.email, profile_path(post.user.email)%>
    <%= time_ago_in_words post.created_at %>
  <%= post.total_likes %> likes 
  <p>description</p>
<%= simple_format post.description %>

<% post.comments.each do |comment| %>
  <br>
  <%= comment.user.email %>
  <%= time_ago_in_words comment.created_at %>
  <br>
  <%= comment.comment %>
  <% end %>
    <%= form_for Comment.new do |f| %>
<%= f.hidden_field :post_id, value: post.id  %>
<%= f.text_field :comment, placeholder: "add comment here" %>
<%= f.submit "Post", class: "btn btn-success float-right" %>
<% end %>
<% end %>
</div>