<%= render "layouts/errors", :object => @post %>
  <div class="form-group">
    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control" %>
      </div> 
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <p><%= f.submit %></p>
      </div> 
    <% end %>