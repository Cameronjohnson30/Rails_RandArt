<!DOCTYPE html>
<html>
  <head>
    <title>Randart</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/428b913dd2.js" crossorigin="anonymous"></script>
    <script src="/assets/jquery.js" type="text/javascript"></script>
    <script src="/assets/jquery_ujs.js" type="text/javascript"></script>
  </head>

  <div class="top">
    <%= image_tag "cpencil.jpeg", style:'height:100px' %>
    <h1>RANDART</h1>
  </div>
  <header>
    <div class="navi_bar">
      <div class="name">
        <% if user_signed_in? %>
          Signed in as: <%= current_user.username.capitalize %>
        <% end %>
      </div>
      <% if current_user %>
        <div class="btn-group" role="group" aria-label="Basic outlined example">
          <button type="button" class="btn btn-outline-primary"><h6><%= link_to "Profile", profile_path(current_user.username) %></h6></button>
          <button type="button" class="btn btn-outline-primary"><h6><%= link_to "Edit Account", edit_user_registration_path %></h6></button>
          <button type="button" class="btn btn-outline-primary"><h6><%= link_to 'Logout', destroy_user_session_path, method: :delete %></h6></button>
        <% else %>
          <button type="button" class="btn btn-outline-primary"><h6><%= link_to "Sign-In", new_user_session_path%></h6></button>
          <button type="button" class="btn btn-outline-primary"><h6><%= link_to "Sign-Up", new_user_registration_path%></h6></button>
        <% end %>
          <button type="button" class="btn btn-outline-primary"><h6><%= link_to "Radom", root_path %></h6></button>
          <button type="button" class="btn btn-outline-primary"><h6><%= link_to "new post", new_post_path %></h6></button>
          <button type="button" class="btn btn-outline-primary"><h6><%= link_to "Gallery", posts_path %></h6></button>
      </div>
    </header>
  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
